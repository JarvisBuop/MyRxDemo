<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <com.zjy.zlibrary.widget.TitleBar
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_color"/>

    <android.support.design.widget.TabLayout
        android:id="@+id/tab_table_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_1st"
        app:tabBackground="@color/white_1st"
        app:tabGravity="fill"
        app:tabMode="scrollable"
        app:tabPaddingStart="0dp"
        app:tabPaddingEnd="0dp"
        app:tabIndicatorHeight="0dp"
        app:tabMaxWidth="0dp"
        app:tabSelectedTextColor="@color/black_1st"
        app:tabTextColor="@color/gray_1st">
    </android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_table_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v4.view.ViewPager>
</LinearLayout>
