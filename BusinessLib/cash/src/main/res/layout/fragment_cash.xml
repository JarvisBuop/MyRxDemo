<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:title="http://schemas.android.com/apk/res-auto"
    android:background="#fff"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.zjy.zlibrary.widget.TitleBar
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_color"
        android:visibility="gone"
        title:title_mode="fit">
    </com.zjy.zlibrary.widget.TitleBar>

    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.zjy.zlibrary.widget.NumSoftKeyboard
            android:id="@+id/num_soft_keyboard"
            android:layout_width="match_parent"

            android:layout_height="200dp"
            android:layout_alignParentBottom="true"
            app:numBgColor="#757575"
            app:numBgColor2="#595959"
            app:numFontColor="@color/white_1st"
            app:numLineColor="#535353"
            app:numPressColor="#525252"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_above="@+id/num_soft_keyboard"
            android:background="#fff"
            android:orientation="horizontal"
            android:padding="3dp">

            <Button
                android:id="@+id/btn_scan_pay"
                style="@style/keyBoard_number_new"
                android:text="@string/scan_pay"/>

            <Button
                android:id="@+id/btn_union_pay"
                style="@style/keyBoard_number_new"
                android:text="@string/union_pay"
                android:visibility="gone"/>

            <Button
                android:id="@+id/btn_member_pay"
                style="@style/keyBoard_number_new"
                android:text="@string/member_pay"
                android:visibility="visible"/>


        </LinearLayout>
    </RelativeLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleBar"
        >
        <TextView
            android:id="@+id/tv_exception"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:background="#ffdae0"
            android:gravity="center"
            android:padding="9dp"
            android:text="打印异常"
            android:textColor="#f44336"
            android:textSize="13sp"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/tv_table_msg"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="right|center_vertical"
            android:paddingRight="10dp"
            android:textColor="@color/yellow_1st"
            android:textSize="20sp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_card_title"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="right|center_vertical"
            android:paddingRight="10dp"
            android:text="银行卡号:"
            android:textColor="@color/gray_1st"
            android:textSize="20sp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_card"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="right|center_vertical"
            android:paddingRight="10dp"
            android:text="**** **** **** ****"
            android:textColor="@color/gray_2nd"
            android:textSize="30sp"
            android:visibility="gone"/>

        <com.zjy.zlibrary.widget.InterceptRelativeLayout
            android:id="@+id/rl_money"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:paddingLeft="20dp"
            android:visibility="visible">

            <TextView
                android:id="@+id/tv_money_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_weight="1"
                android:text="@string/sum_of_consumption"
                android:textColor="@color/selector_pay_text"
                android:textSize="20sp"/>

            <com.zjy.zlibrary.widget.MoneyEdit
                android:id="@+id/tv_money"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/tv_money_title"
                android:layout_gravity="right"
                android:background="@color/white_1st"
                android:editable="false"
                android:gravity="right|center_vertical"
                android:paddingRight="20dp"
                android:textColor="@color/selector_pay_edit_text"
                android:textSize="30sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/tv_money_title"
                android:layout_marginRight="20dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/selector_pay_edit_line">
            </View>
        </com.zjy.zlibrary.widget.InterceptRelativeLayout>

        <com.zjy.zlibrary.widget.InterceptRelativeLayout
            android:id="@+id/rl_discount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:visibility="visible">

            <TextView
                android:id="@+id/tv_discount_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/in_discount"
                android:textColor="@color/selector_pay_text"
                android:textSize="20sp"/>

            <com.zjy.zlibrary.widget.MoneyEdit
                android:id="@+id/et_pay_discount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/tv_discount_title"
                android:layout_gravity="right"
                android:background="@color/white_1st"
                android:editable="false"
                android:paddingRight="20dp"
                android:gravity="right|center_vertical"
                android:textColor="@color/selector_pay_edit_text"
                android:textSize="20sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/tv_discount_title"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/selector_pay_edit_line">
            </View>
        </com.zjy.zlibrary.widget.InterceptRelativeLayout>

    </LinearLayout>

</RelativeLayout>