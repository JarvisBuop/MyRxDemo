<?xml version="1.0" encoding="UTF-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_order_item"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:background="@drawable/shape_rec_corner"
    android:padding="10dp">

    <TextView
        android:id="@+id/tv_order_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="订单号"
        android:textColor="@color/black_1st"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/tv_has_eat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="未就餐"
        android:textColor="@color/black_1st"
        android:textSize="16sp"/>


    <TextView
        android:id="@+id/tv_print"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_order_id"
        android:layout_marginTop="10dp"
        android:text="预点单号 : "
        android:textColor="@color/gray_6th"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/tv_print_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_print"
        android:layout_toRightOf="@+id/tv_print"
        android:text="0000"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/tv_source_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_print"
        android:layout_marginTop="5dp"
        android:text="预点单金额"
        android:textColor="@color/gray_6th"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/tv_real_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_source_price"
        android:layout_marginTop="5dp"
        android:text="实际收银"
        android:textColor="@color/gray_6th"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/tv_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_real_price"
        android:layout_marginTop="5dp"
        android:text="手机末四位"
        android:textColor="@color/gray_6th"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/tv_pay_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_phone"
        android:layout_marginTop="5dp"
        android:text="交易时间"
        android:textColor="@color/gray_6th"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/tv_pay_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_pay_time"
        android:layout_marginTop="5dp"
        android:text="支付类型"
        android:textColor="@color/gray_6th"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/tv_pay_table"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_pay_type"
        android:layout_marginTop="5dp"
        android:text="桌号"
        android:textColor="@color/gray_6th"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/tv_fail_reason"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_pay_table"
        android:layout_marginTop="5dp"
        android:text="失败原因"
        android:textColor="@color/gray_6th"
        android:textSize="15sp"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_fail_reason"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_print"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selector_btn_green"
            android:padding="10dp"
            android:text="打印预点单"
            android:textColor="@color/white_1st"
            android:textSize="20sp"/>

        <Button
            android:id="@+id/bt_pay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/selector_btn_red"
            android:focusable="false"
            android:padding="10dp"
            android:text="收    银"
            android:textColor="#FFF"
            android:textSize="20sp"/>
    </LinearLayout>

</RelativeLayout>