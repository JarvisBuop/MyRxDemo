<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/layout_cash_table_bill"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#f5f5f5"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
    >

    <TextView
        android:id="@+id/tv_table_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textSize="18sp"
        tools:text="巨蟹听"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_toEndOf="@id/tv_table_msg"
        android:layout_toRightOf="@id/tv_table_msg"
        android:text="买单中"
        android:textColor="#2a2a2a"
        android:textSize="15sp"/>

    <Button
        android:id="@+id/btn_cancel_bill"
        android:layout_width="85dp"
        android:layout_height="36dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/shape_rec_corner"
        android:text="取消买单"
        android:textColor="#333333"
        android:textSize="15sp"/>
</RelativeLayout>